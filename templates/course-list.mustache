{{!
    @template block_myoverview_enva/course-list

    This template renders the list of courses

    Example context (json):
    {
        "courses": [
            {
                 "fullname": "My test course fullname",
                 "summary": "Sumary text goes here...",
                 "viewurl": "http://xxx/course/view.php?id=courseid"
                 "progress": 60,
                 "hasstarted": true,
                 "tobereviewed": true,
                 "visible": true
            },
            {
                 "fullname": "My test course fullname 2",
                 "summary": "Sumary text goes here...",
                 "viewurl": "http://xxx/course/view.php?id=courseid"
                 "progress": 60
                 "hasstarted": true,
                 "tobereviewed": false,
                 "visible": true
            }
        ]
    }
}}
<div id="block-myoverview-enva-{{uniqid}}" class="block-myoverview-enva" data-region="myoverview-enva">
    <ul class="hexagonal-grid">
        {{#courses}}
            <li class="hexagon"
                id="course-info-exa-{{id}}">
                <a href="{{viewurl}}" class="{{^visible}}dimmed{{/visible}}">
                    <div class="hexagon{{#tobereviewed}} recommended{{/tobereviewed}}{{#completed}} completed{{/completed}}">
                        <div class="hexagon-progress" style="width:{{progress}}%"></div>
                        <span class="title">{{{fullname}}}</span>
                        <p class="text-muted summary">
                            {{#shortentext}} 100, {{summary}}{{/shortentext}}
                        </p>
                        <div class="progress-display">
                            {{#str}}progressmessage, block_myoverview_enva, {{progress}} {{/str}}</div>
                    </div>
                </a>
            </li>
        {{/courses}}
    </ul>
</div>