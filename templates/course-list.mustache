{{!
    @template block_pharmaco/course-list

    This template renders the list of courses

    Example context (json):
    {
        "courses": [
            {
                 "fullname": "My test course fullname",
                 "summary": "Sumary text goes here...",
                 "viewurl": "http://xxx/course/view.php?id=courseid"
                 "progress": 60,
                 "hasstarted": true,
                 "tobereviewed": true,
                 "score": 0.4,
                 "visible": true,
                 "icon": pix icon for the course (deduced from the course tag)
            },
            {
                 "fullname": "My test course fullname 2",
                 "summary": "Sumary text goes here...",
                 "viewurl": "http://xxx/course/view.php?id=courseid",
                 "progress": 60,
                 "hasstarted": true,
                 "tobereviewed": false,
                 "score": 1,
                 "visible": true,
                 "icon": pix icon for the course (deduced from the course tag)
            }
        ]
    }
}}
<div id="block-pharmaco-{{uniqid}}" class="block-pharmaco" data-region="pharmaco">
    <ul class="hexagonal-grid">
        {{#courses}}
            <li class="hexagon"
                id="course-info-exa-{{id}}" data-score="{{ score }}">
                <a href="{{viewurl}}" class="{{^visible}}dimmed{{/visible}}">
                    <div class="hexagon {{#completed}} completed{{/completed}}">

                        {{#icon}}
                            <img {{#attributes}}{{name}}="{{value}}"{{/attributes}} class="{{extraclasses}}"/>
                        {{/icon}}

                        {{#tobereviewed}}
                            <div class="reviewicon">
                            </div>
                        {{/tobereviewed}}
                        <div class="hexagon-progress" style="width:{{progress}}%"></div>
                        <span class="title">{{{fullname}}}</span>
                        <p class="text-muted summary">
                            {{#shortentext}} 100, {{summary}}{{/shortentext}}
                        </p>
                        <div class="progress-display">
                            {{#str}}progressmessage, block_pharmaco, {{progress}} {{/str}}</div>
                    </div>
                </a>
            </li>
        {{/courses}}
    </ul>
</div>